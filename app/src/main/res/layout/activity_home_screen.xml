<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toolbar with Profile Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/profile"
            android:contentDescription="Profile"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Product List"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Product 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/product1_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/shoes"
            android:contentDescription="Product 1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/product1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nike Shoes"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 450"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/select_product1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select" />
    </LinearLayout>

    <!-- Product 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/product2_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/hoodie"
            android:contentDescription="Product 2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/product2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adidas Hoodie"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 650"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/select_product2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select" />
    </LinearLayout>

    <!-- Buy Now Button -->
    <Button
        android:id="@+id/buy_now_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:layout_marginTop="32dp"
        android:enabled="false" />
</LinearLayout>
